<article>
  <section class="main-post">
    <div>
    <h1><%= @post.title %> by <%= User.find(@post.author_id).name %></h1>
    <div class="post-counters">
      <span>Likes: <%= @post.likes_counter%></span>
      <span>Comments: <%= @post.comments_counter%></span>
    </div>
    </div>
    <p><%= @post.text %></p>

    <%= render partial: "partials/like_form", locals: {author_id: @post.author_id, post_id: @post.id} %>
  </section>

  <section class="comments-section">
  <h2>Comments: </h2>
  <ul class="comments-list">
  <% @comments.each do |comment| %>
    <li>
    <%= render partial: "partials/comment", locals: {comment: comment, post: @post} %>
    </li>
  <% end %>
  </ul>

  <%= render partial: "partials/comment_form", locals: {post: @post, author: @recent_user, user_id: @post.author_id} %>
  </section>
</article>
