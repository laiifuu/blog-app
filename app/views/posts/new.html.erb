
<section>
  <h1>Add a new post</h1>

  <%= form_with model: @post, url: user_posts_path do |form| %>    
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>
    <%= form.submit %>
  <% end %>
</section>


